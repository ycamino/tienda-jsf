<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
>
    <session-config>
        <session-timeout>30
        </session-timeout>
    </session-config>
    <!-- Variable global de la aplicaci칩n web para indicar el archivo XML 
        donde se encuentra nuestra configuraci칩n de Spring. -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <!-- Componente de Spring Web que crea un ServletContextListener. Esta 
        clase va a crear el ApplicationContext ctx y lo registrar치 dentro de ServletContext 
        para que el objeto ctx sea global a nivel de la aplicaci칩n. -->
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
    <listener>
        <listener-class>
            org.springframework.web.context.request.RequestContextListener
        </listener-class>
    </listener>
    <!-- Se configura el FacesServlet que va a atender las peticiones. -->
    <servlet>
        <servlet-name>FacesServlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FacesServlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>productos.xhtml</welcome-file>
    </welcome-file-list>
</web-app>